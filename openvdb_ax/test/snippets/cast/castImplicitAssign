
// local to local

int test1 = 0.7;
int@int_test1 = test1;

vec3d test2 = { 1.0, 1.0, 1.0 };
vec3f test3 = test2;
v@vec_float_test1 = test3;

// local to attrib - assume attrib to local

int@int_test2 = 0.5f;
@float_test1 = 10;
long@long_test1 = 2147483648.0;

vec3i a = { 3, 5, -6 };
vec3d b = { 1.0, 3.4, 6.0 };
v@vec_float_test2 = b;
vec3d@vec_double_test1 = a;

// attrib to attrib

@float_test2 = i@int_test1;
@float_test3 = 5.2f;
i@int_test3 = @float_test3;



